<div class="panel panel-info">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-6">
        <h3> Enter the password </h3>
      </div>
    </div>
  </div>

  <form action="<%= message_path(@message) %>" method="POST" class="form-horizontal">
    <input type='hidden' name='_method' value='GET' />

    <div class="panel-body">    
      <div class="row">
        <div class="col-md-6">
          <div class="input-group">
            <input type="text" id="password" placeholder="Password" name='message[password]' value='' class='form-control'>
            <span class="input-group-btn">
              <button type="submit" class="btn">Push the button to see your message</button>
            </span>
          </div>
        </div>
      </div>
    </div>

  </form>

</div>
